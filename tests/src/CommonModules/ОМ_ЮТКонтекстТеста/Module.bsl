// Тестовый модуль для ЮТКонтекстТеста

Процедура ИсполняемыеСценарии() Экспорт
    // Регистрация тестов
    ЮТТесты
        .ДобавитьТест("УстановкаИПолучениеЗначения")
        .ДобавитьТест("ТекущийКонтекстВозвращаетСтруктуру");
КонецПроцедуры

Процедура УстановкаИПолучениеЗначения() Экспорт
    // Проверяем, что можно установить и получить значение в контексте теста
    Ключ = "ТестКлюч";
    Значение = "ТестЗначение";
    ЮТКонтекстТеста.УстановитьЗначение(Ключ, Значение);
    Полученное = ЮТКонтекстТеста.Значение(Ключ);
    ЮТест.ОжидаетЧто(Полученное, "Значение должно быть установлено и получено").Равно(Значение);
КонецПроцедуры

Процедура ТекущийКонтекстВозвращаетСтруктуру() Экспорт
    // Проверяем, что функция ТекущийКонтекст возвращает структуру или Неопределено
    Контекст = ЮТКонтекстТеста.ТекущийКонтекст();
    ЮТест.ОжидаетЧто(Контекст, "ТекущийКонтекст должен возвращать структуру или Неопределено")
        .НеРавно(Неопределено)
        .ИмеетТип("Структура");
КонецПроцедуры
